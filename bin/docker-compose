#!/usr/bin/env ruby

# This is a fake "docker-compose" executable meant to be used for development

commands = [
  # Add all the valid commands here in the following format:
  # [ COMMAND_ARGS, STDOUT, STDERR, EXIT_STATUS]
  [['-v'], 'docker-compose version: 1.4.0', '', 0]
]

commands.find do |cmd|
  next if cmd[0] != ARGV
  STDOUT.puts cmd[1]
  STDERR.puts cmd[2]
  exit cmd[3]
end

fail "Fake docker-compose doesn't know command #{ARGV.inspect}"
